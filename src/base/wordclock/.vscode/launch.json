{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {   "name": "Pico Debug",
            "device": "RP2040",
            "showDevDebugOutput": true,
            "armToolchainPath": "/usr/bin",
            "toolchainPrefix" : "arm-none-eabi",
            "gdbPath": "arm-none-eabi-gdb",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/wordlcok.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040-core0.cfg"
            ],
            "openOCDLaunchCommands": [
                "transport select swd",
                "adapter speed 4000"
            ],
            "svdFile": "${workspaceRoot}/../pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": true,
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "debuggerArgs": [
                "-d",
                "${workspaceFolder}/src",
                "-d",
                "${workspaceFolder}"
            ],
            "searchDir": [ 
                "${workspaceRoot}",
                "${workspaceRoot}/src",
            ],
        },
        {
            "name": "JLINK USB",
            //"showDevDebugOutput": "raw",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/wordclock.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink",
            "interface": "swd",
            //"ipAddress": "127.0.0.1",
            
            "svdFile": "${workspaceRoot}/../pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "device": "RP2040_M0_0",
            "osx": {
                //"serverpath": "JLinkGDBServerCLExe",
            },
            "linux": {
               "armToolchainPath": "/usr/bin",
                "toolchainPrefix" : "arm-none-eabi",
            },
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "debuggerArgs": [
                "-d",
                "${workspaceFolder}/src"
            ],
            "searchDir": [ 
                "${workspaceRoot}",
                "${workspaceRoot}/src",
            ],
        },
        {
            "name": "Pico Probe",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/wordclock.elf",
            "request": "launch",
            "armToolchainPath": "/usr/bin",
            "toolchainPrefix" : "arm-none-eabi",
            "gdbPath": "arm-none-eabi-gdb",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "RP2040",
            "configFiles": [
                "interface/picoprobe.cfg",
                "target/rp2040.cfg"
            ],
            "interface": "swd",
            "svdFile": "${workspaceRoot}/../pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": true,
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            //"openOCDLaunchCommands": [
            //    "transport select swd",
            //    "adapter speed 4000",
            //    "adapter picoprobe"
            //],
            
        }
    ]
}